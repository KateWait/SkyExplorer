@model DatabaseExplorer.ViewModels.HomeViewModel

<div>
    <br />
    <hr />
    <div class="modal-header">
        <h4>Selected Table <input id="table-sel" type="text" value="@Model.TableName" style="margin-left: 1%;"/></h4>
    </div>
    <br />
    
   
    <div class="alert alert-success" onclick="Hide3()">
        <b> Click to add filters to table! </b>
    </div>

    <div id="filters" style="display: none;">
        <div class="form-inline">
            <br />
            <label> Top x </label>
            <input type="number" id="top" data-placeholder="Please input only numbers" style="margin-left: 1%;" />
            <input type="button" value="Execute" class="btn btn-success" onclick="SelectTop()" />
        </div>
    </div>

    <br />
    <br />

    <div class="modal-header">
        <h5>Tables in Selected Database</h5>
    </div>
    <table id="table" class="table table-striped table-bordered">
        <tr>
            @foreach (System.Data.DataColumn a in Model.Table.Columns)
            {
                <th><b>@a.ColumnName.ToString().ToLower().Replace("_", "  ")</b></th>
            }
        </tr>
        @foreach (System.Data.DataRow row in Model.Table.Rows)
        {
            <tr>
                @foreach (System.Data.DataColumn col in Model.Table.Columns)
                {
                    <td>@row[@col]</td>
                }
            </tr>
        }


    </table>
</div>

