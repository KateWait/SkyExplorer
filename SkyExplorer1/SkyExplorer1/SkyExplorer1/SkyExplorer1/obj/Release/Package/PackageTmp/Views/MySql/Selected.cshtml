@model DatabaseExplorer.ViewModels.HomeViewModel
<link href="~/Content/admin/plugins/dataTables.bootstrap.css" rel="stylesheet" />

<div>
    <br />
    <hr />
    <div class="modal-header">
        <h4>Selected Table <input id="table-sel" type="text" value="@Model.TableName" style="margin-left: 1%;" /></h4>
    </div>
    <br />


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Selected table value
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="table" class="table table-striped table-bordered">
                            <tr>
                                @foreach (System.Data.DataColumn a in Model.Table.Columns)
                                {
                                    <th><b>@a.ColumnName.ToString().ToLower().Replace("_", "  ")</b></th>
                                }
                            </tr>
                            @foreach (System.Data.DataRow row in Model.Table.Rows)
                            {
                                <tr>
                                    @foreach (System.Data.DataColumn col in Model.Table.Columns)
                                    {
                                        <td>@row[@col]</td>
                                    }
                                </tr>
                            }


                        </table>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/App/sb-admin-2.js"></script>
<script src="~/Scripts/App/jquery.dataTables.js"></script>
<script src="~/Scripts/App/dataTables.bootstrap.js"></script>

<script type="text/javascript">
    $(document).ready(function() {
        $('#table').dataTable({
            "processing": true,
            "serverSide": true,
            "ajax": "@Url.Action("Select", "MySql")"
        });
        });
</script>
